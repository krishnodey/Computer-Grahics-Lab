#include<windows.h>
#include <GL/glut.h>
#include <stdlib.h>
#include <GL/gl.h>
#include <GL/glu.h>

void init()
{
    glClearColor(1.0f,0.0f,1.0f,0.0f);
    glOrtho(-100,100,-100,100,-100,100);
}

void myDisplay()
{
    glClear(GL_COLOR_BUFFER_BIT);
    int x1=-100,x2=-90,y1=0,y2=10;
for (int i=1;i<=8; i++)
{
for(int j=1;j<=8;j++)
    {
if(i%2==0)
    {
    if(j%2!=0)
    {glColor3f(0,0,0);
    glRectf(x1,y1,x2,y2);
    x1=x1+10;
    x2=x2+10;

    }
    else
    {glColor3f(1,1,1);
    glRectf(x1,y1,x2,y2);
    x1=x1+10;
    x2=x2+10;

    }
    }
else
    {
    if(j%2!=0)
    {glColor3f(1,1,1);
    glRectf(x1,y1,x2,y2);
    x1=x1+10;
    x2=x2+10;

    }
   else
    {glColor3f(0,0,0);
    glRectf(x1,y1,x2,y2);
    x1=x1+10;
    x2=x2+10;

    }
    }
    }

x1=-100;
x2=-90;
y1=y1+10;
y2=y2+10;
}
glFlush();
}

int main()
{
    glutInitDisplayMode(GLUT_SINGLE|GLUT_RGB);
    glutInitWindowSize(700,700);
    glutInitWindowPosition(0,0);
    glutCreateWindow("DEMO");
    init();
    glutDisplayFunc(myDisplay);
    glutMainLoop();
    return 0;
}
